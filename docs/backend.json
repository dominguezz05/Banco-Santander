{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's profile information.",
      "properties": {
        "firstName": {
          "type": "string",
          "description": "The user's first name."
        },
        "lastName": {
          "type": "string",
          "description": "The user's last name."
        },
        "nif": {
          "type": "string",
          "description": "The user's NIF (Número de Identificación Fiscal)."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        }
      },
      "required": [
        "firstName",
        "lastName",
        "nif",
        "email"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous",
      "email"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "Stores user profile information. Each document corresponds to a user in Firebase Auth.",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier for the user account, matching the Firebase Auth UID."
            }
          ]
        }
      }
    ]
  }
}